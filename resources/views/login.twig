{% extends 'base.twig' %}

{% block head %}
<title>Login &mdash; Ad Rotator</title>
{% endblock %}

{% block js %}
<script src="{{ asset('js/login.js') }}"></script>
{% endblock %}

{% block content %}
<div class="row">
  <div class="col-12 col-md-8 offset-md-2 col-lg-6 offset-lg-3">
    <form class="card">
      <div class="card-header text-center">
        <h3>Login</h3>
      </div>
      <div class="card-body" id="login-card">
        <div class="form-group input-group">
          <div class="input-group-prepend">
            <div class="input-group-text">
              <i class="fas fa-user"></i>
            </div>
          </div>
          <input type="text" class="form-control" name="username" placeholder="Username" autofocus>
        </div>
        <div class="form-group input-group">
          <div class="input-group-prepend">
            <div class="input-group-text">
              <i class="fas fa-key"></i>
            </div>
          </div>
          <input type="password" class="form-control" placeholder="Password" name="password">
        </div>
      </div>
      <div class="card-footer">
        <div class="row">
          <div class="col-sm-6">
            <label class="form-check-label" id="remember-me-label">
              <input class="form-check-input" name="remember_me" type="checkbox" checked>
              Remember me
            </label>
          </div>
          <div class="col-sm-6">
            <button class="btn btn-success full-width" id="login-btn" type="submit" disabled>
              <i class="fas fa-spinner fa-pulse" id="login-spinner" hidden></i>
              <i class="fas fa-sign-in-alt"></i>
              Login
            </button>
          </div>
        </div>
      </div>
    </form>
  </div>
</div>
{% endblock %}
